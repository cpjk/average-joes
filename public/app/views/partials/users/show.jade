div.page-header.text-center
  h3 Profile
  p View and edit your profile below

div.text-center
  table.table-condensed.prof-table
    tr
      td.text-left Username:
      td {{userCtrl.user.username}}
    tr
      td.text-left First name:
      td {{userCtrl.user.firstname}}
    tr
      td.text-left Last name:
      td {{userCtrl.user.lastname}}
    tr
      td.text-left Email:
      td {{userCtrl.user.email}}

  div(ng-controller="userDeleteController as userDeleteCtrl")
    a(ng-href="{{userCtrl.userEditUrl}}" role="button").btn.btn-default.marg-button-lr.
      Edit
    button(ng-click="userDeleteCtrl.delete(userCtrl.user)").btn.btn-default.marg-button-lr.
      Delete

div.text-center
 h3 My bookings
 ul(ng-repeat="booking in userCtrl.user.bookings").list-group
   li.list-group-item
     {{booking.bookable.bookableType.name}}:
     {{booking.bookable.name}}
     at
     {{booking.timeSlots[0].hourOfDay}}
     on
     {{userCtrl.formatDate(booking.date)}}

     button(ng-click="userCtrl.deleteBooking(booking)").btn.btn-default.marg-button-lr.
       Delete
